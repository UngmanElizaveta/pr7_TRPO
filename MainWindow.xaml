<Window x:Class="pr_7_ungman.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr_7_ungman"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="290" />
            <RowDefinition Height="120" />
            <RowDefinition  Height="130"/>
            <RowDefinition  />
        </Grid.RowDefinitions>
        
        <StackPanel x:Name="Panel_1" Grid.Row="0">
            
            <Label Content="Имя"></Label>
            <TextBox Text="{Binding Name}"/>
            <Label Content="Фамилия"></Label>
            <TextBox Text="{Binding LastName}"/>
            <Label Content="Отчество"></Label>
            <TextBox Text="{Binding MiddleName}"/>
            <Label Content="Специализация"></Label>
            <TextBox Text="{Binding Specialisation}"></TextBox>
            <Label Content="Пароль"></Label>
            <TextBox Text="{Binding Password}"/>
            <Label Content="Подтвердите пароль"></Label>
            <TextBox Text="{Binding Password_catch}"/>
            <Button Content="Зарегистрироваться" Click="Button_Click_1"/>
        </StackPanel>

        <StackPanel x:Name="Panel_2" Grid.Row="1" >
            <Label Content="Идентификатор"></Label>
            <TextBox Text=""/>
            <Label Content="Пароль"></Label>
            <TextBox Text=""/>
            <Button Content="Войти" Click="Button_Click"/>
        </StackPanel>

        <StackPanel x:Name="Panel_3" Grid.Row="2">
            <Label Content="{Binding Name}"></Label>
            <Label Content="{Binding LastName}"></Label>
            <Label Content="{Binding MiddleName}"></Label>
            <Label Content="{Binding Specialisation}"></Label>

        </StackPanel>
        
        <StackPanel Grid.Row="3">
           
        </StackPanel>
    </Grid>
</Window>
